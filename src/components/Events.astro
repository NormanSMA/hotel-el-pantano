<section id="eventos" class="relative section-padding bg-gray-900 text-white overflow-hidden">
  
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
        src="/images/eventos/bodas/mesa-invitados-aire-libre.webp" 
        alt="Eventos Background" 
        class="w-full h-full object-cover opacity-30"
        loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/80 to-transparent"></div>
  </div>

  <div class="relative z-10 container-site text-center">
    
    <div class="max-w-3xl mx-auto" data-animate>
      <h2 class="text-3xl md:text-5xl font-serif font-bold mb-6">
        Celebraciones que <span class="text-accent">Dejan Huella</span>
      </h2>
      
      <p class="text-lg md:text-xl text-gray-300 mb-10 font-light leading-relaxed">
        Desde una boda elegante hasta una fiesta de quince años temática, nuestro local se transforma para hacer tu visión realidad. Con capacidad para hasta <span class="text-white font-semibold">400 personas</span>, ofrecemos el lienzo perfecto para cualquier celebración.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a 
            href="https://wa.me/50586538494" 
            target="_blank"
            class="w-full sm:w-auto px-8 py-4 bg-accent hover:bg-accent-hover text-gray-900 font-bold rounded-full transition-all duration-300 shadow-[0_0_20px_rgba(226,196,41,0.3)] hover:shadow-[0_0_30px_rgba(226,196,41,0.5)] transform hover:-translate-y-1"
        >
            Cotiza tu Evento
        </a>
        <a 
            href="/contacto" 
            class="w-full sm:w-auto px-8 py-4 bg-transparent border border-white/30 hover:bg-white/10 text-white font-medium rounded-full transition-all duration-300"
        >
            Más Información
        </a>
      </div>
    </div>

  </div>
</section>
