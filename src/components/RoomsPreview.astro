<section class="relative py-32 bg-gray-50 overflow-hidden">
  <div class="container-site relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Content Side -->
      <div class="order-2 lg:order-1" data-animate>
        <span class="text-primary font-bold tracking-wider uppercase text-sm mb-2 block">Hospedaje</span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-6">Tu Escape al Campo</h2>
        <p class="text-gray-600 mb-8 leading-relaxed text-lg">
          Desconecta de la rutina y despierta con el canto de los pájaros. Nuestras cabañas combinan el encanto rústico con todas las comodidades modernas para una estancia reparadora.
        </p>
        
        <!-- Amenities Grid -->
        <div class="grid grid-cols-2 gap-y-4 gap-x-8 mb-8">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            </div>
            <span class="text-gray-700 font-medium">Hasta 3 Huéspedes</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
            </div>
            <span class="text-gray-700 font-medium">Baño con Agua Caliente</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/></svg>
            </div>
            <span class="text-gray-700 font-medium">Wi-Fi de Cortesía</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            </div>
            <span class="text-gray-700 font-medium">Parqueo Seguro</span>
          </div>
        </div>

        <div class="flex items-center gap-4">
          <a href="/habitaciones" class="px-8 py-4 bg-primary hover:bg-primary-dark text-white font-semibold rounded-lg transition-colors shadow-lg shadow-primary/30">
            Ver Detalles
          </a>
          <span class="text-2xl font-bold text-gray-900 ml-4">C$500 <span class="text-base font-normal text-gray-500">/ noche</span></span>
        </div>
      </div>

      <!-- Image Card Stack -->
      <div class="order-1 lg:order-2 relative h-[500px] w-full flex items-center justify-center" data-animate>
        
        <!-- Back Card (Bathroom/Detail) -->
        <div class="absolute top-0 right-0 w-3/4 h-3/4 transform translate-x-4 -translate-y-4 rotate-3 rounded-2xl overflow-hidden shadow-xl z-0 border-4 border-white">
          <img 
            src="/images/habitaciones/bano.webp" 
            alt="Baño Privado" 
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>

        <!-- Front Card (Main Room) -->
        <div class="absolute bottom-0 left-4 w-3/4 h-3/4 transform -translate-x-4 translate-y-4 -rotate-2 rounded-2xl overflow-hidden shadow-2xl z-10 border-4 border-white">
          <img 
            src="/images/habitaciones/interior-habitacion.webp" 
            alt="Interior Habitación" 
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
            loading="lazy"
          />

        </div>

      </div>

    </div>
  </div>
</section>
