---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contacto - Hotel El Pantano">
  <Navbar />

  <!-- Hero -->
  <div class="hero-section min-h-[45vh]">
    <img src="/images/hero/decoracion-rustica-jardin.webp" alt="Contacto El Pantano" class="absolute inset-0 w-full h-full object-cover" />
    <div class="hero-content py-24">
      <span class="inline-block bg-accent/90 text-primary-dark font-semibold text-xs uppercase tracking-widest px-4 py-1.5 rounded-full mb-4">Hablemos</span>
      <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-4 drop-shadow-lg">Estamos Aquí para Ti</h1>
      <p class="text-lg text-white/90 max-w-xl mx-auto font-light">¿Tienes preguntas? ¿Quieres reservar? Contáctanos.</p>
    </div>
  </div>

  <section class="section-padding bg-white">
    <div class="container-site">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        
        <!-- Contact Info -->
        <div data-animate>
          <h2 class="text-2xl md:text-3xl font-serif font-bold text-gray-900 mb-6">Información de Contacto</h2>
          <p class="text-gray-600 mb-8">Estamos ubicados en el corazón de Jalapa, listos para recibirte.</p>
          
          <ul class="space-y-5 mb-10">
            <li class="flex items-start gap-4">
              <div class="bg-primary/10 text-primary p-3 rounded-xl shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-0.5">Dirección</h3>
                <p class="text-gray-600 text-sm">Jalapa, Nueva Segovia, Nicaragua.</p>
                <a href="https://maps.app.goo.gl/6mA6p4b53x29dgEz5" target="_blank" class="text-primary hover:text-primary-dark underline text-sm mt-1 inline-block">Ver en Google Maps →</a>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <div class="bg-primary/10 text-primary p-3 rounded-xl shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-0.5">Teléfono & WhatsApp</h3>
                <p class="text-gray-600 text-sm">+505 8653 8494</p>
                <a href="https://wa.me/50586538494" target="_blank" class="text-primary hover:text-primary-dark underline text-sm mt-1 inline-block">Enviar Mensaje →</a>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <div class="bg-primary/10 text-primary p-3 rounded-xl shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-0.5">Correo Electrónico</h3>
                <p class="text-gray-600 text-sm">info@hotelelpantano.com</p>
              </div>
            </li>
          </ul>

          <!-- Map -->
          <div class="rounded-2xl overflow-hidden shadow-md border border-gray-100 aspect-video">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15555.334268688534!2d-86.1342697!3d13.9213568!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f71c4c1143c94d1%3A0x867332308cf22521!2sHotel%20El%20Pantano!5e0!3m2!1ses!2sni!4v1700000000000!5m2!1ses!2sni" 
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>

        <!-- Form -->
        <div data-animate>
          <div class="bg-gray-50 p-6 md:p-10 rounded-2xl border border-gray-100">
            <h2 class="text-2xl font-serif font-bold text-gray-900 mb-6">Envíanos un Mensaje</h2>
            
            <form id="contact-form" class="space-y-5">
              <div>
                <label for="from_name" class="block text-sm font-medium text-gray-700 mb-1.5">Nombre Completo</label>
                <input type="text" id="from_name" name="from_name" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-white" placeholder="Tu nombre" required />
                <span class="error-msg hidden text-xs text-red-600 mt-1">Nos gustaría saber tu nombre :)</span>
              </div>
              
              <div>
                <label for="reply_to" class="block text-sm font-medium text-gray-700 mb-1.5">Correo Electrónico</label>
                <input type="email" id="reply_to" name="reply_to" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-white" placeholder="tucorreo@ejemplo.com" required />
                <span class="error-msg hidden text-xs text-red-600 mt-1">Regálanos tu correo para poder responderte</span>
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-1.5">Asunto</label>
                <select id="subject" name="subject" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-white">
                  <option value="Consulta General">Consulta General</option>
                  <option value="Reservación de Habitación">Reservación de Habitación</option>
                  <option value="Cotización de Evento">Cotización de Evento</option>
                  <option value="Restaurante">Restaurante</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1.5">Mensaje</label>
                <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-white resize-none" placeholder="¿En qué podemos ayudarte?" required></textarea>
                <span class="error-msg hidden text-xs text-red-600 mt-1">¿En qué podemos apoyarte hoy?</span>
              </div>

              <!-- Honeypot Field (Anti-Spam) -->
              <div class="hidden" aria-hidden="true">
                <label for="website_hp">Si ves esto, no lo llenes</label>
                <input type="text" id="website_hp" name="website_hp" tabindex="-1" autocomplete="off" />
              </div>

              <div id="form-status" class="hidden rounded-lg p-4 text-sm"></div>

              <button type="submit" id="submit-btn" class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-3.5 rounded-lg transition-colors shadow-md hover:shadow-lg flex justify-center items-center gap-2">
                <span>Enviar Mensaje</span>
                <svg id="loading-spinner" class="animate-spin h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
            </form>

            <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
            <script define:vars={{
              PUBLIC_KEY: import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY,
              SERVICE_ID: import.meta.env.PUBLIC_EMAILJS_SERVICE_ID,
              TEMPLATE_ID: import.meta.env.PUBLIC_EMAILJS_TEMPLATE_ID
            }}>
              (function() {
                  // Initialize EmailJS
                  // If no key is found, it will fail silently here, but we log a warning.
                  if (!PUBLIC_KEY) {
                    console.warn("EmailJS Public Key not found. Make sure PUBLIC_EMAILJS_PUBLIC_KEY is set in Vercel environment variables.");
                  } else {
                    emailjs.init({
                      publicKey: PUBLIC_KEY,
                    });
                  }
              })();

              const form = document.getElementById('contact-form');
              const submitBtn = document.getElementById('submit-btn');
              const btnText = submitBtn.querySelector('span');
              const spinner = document.getElementById('loading-spinner');
              const statusDiv = document.getElementById('form-status');
              
              const startTime = Date.now();

              // Manual validation handling
              const inputs = form.querySelectorAll('input[required], textarea[required]');
              
              inputs.forEach(input => {
                input.addEventListener('invalid', (e) => {
                  e.preventDefault(); // Prevent default tooltip
                  input.classList.add('border-red-500');
                  input.nextElementSibling?.classList.remove('hidden');
                });

                input.addEventListener('input', () => {
                  if (input.validity.valid) {
                    input.classList.remove('border-red-500');
                    input.nextElementSibling?.classList.add('hidden');
                  }
                });
              });

              form.addEventListener('submit', function(event) {
                  event.preventDefault();

                  // Reset errors on submit attempt
                  inputs.forEach(i => i.nextElementSibling?.classList.add('hidden'));

                  // 1. Honeypot check
                  const honeypot = document.getElementById('website_hp').value;
                  if (honeypot) {
                    console.warn("Honeypot filled. Bot detected.");
                    statusDiv.textContent = 'Mensaje procesado con calma campestre (Spam bloqueado).';
                    statusDiv.className = 'rounded-lg p-4 text-sm bg-gray-50 text-gray-800 border border-gray-200 block';
                    statusDiv.classList.remove('hidden');
                    form.reset();
                    return;
                  }

                  // 2. Timing check (min 3 seconds)
                  const timeDiff = (Date.now() - startTime) / 1000;
                  if (timeDiff < 3) {
                    console.warn("Form submitted too fast. Bot suspected.");
                    statusDiv.textContent = '¡Despacio! En el campo disfrutamos del tiempo. Por favor, revisa tus datos un momento antes de enviar.';
                    statusDiv.className = 'rounded-lg p-4 text-sm bg-yellow-50 text-yellow-800 border border-yellow-200 block';
                    statusDiv.classList.remove('hidden');
                    return;
                  }
                  
                  if (!PUBLIC_KEY || !SERVICE_ID || !TEMPLATE_ID) {
                    statusDiv.textContent = 'Error de configuración: Faltan las llaves de EmailJS. Por favor contacte al administrador.';
                    statusDiv.className = 'rounded-lg p-4 text-sm bg-red-50 text-red-800 border border-red-200 block';
                    statusDiv.classList.remove('hidden');
                    return;
                  }

                  // Disable button and show spinner
                  submitBtn.disabled = true;
                  submitBtn.classList.add('opacity-75', 'cursor-not-allowed');
                  btnText.textContent = 'Enviando...';
                  spinner.classList.remove('hidden');
                  statusDiv.classList.add('hidden');

                  // Prepare template parameters
                  const templateParams = {
                      name: document.getElementById('from_name').value,
                      email: document.getElementById('reply_to').value,
                      title: document.getElementById('subject').value,
                      message: document.getElementById('message').value,
                      time: new Date().toLocaleString()
                  };

                   // Send email
                   emailjs.send(SERVICE_ID, TEMPLATE_ID, templateParams)
                       .then(function() {
                           // Success
                           statusDiv.textContent = '¡Gracias por escribirnos! En Hotel El Pantano valoramos tu interés y te responderemos con el cariño que nos caracteriza.';
                           statusDiv.className = 'rounded-lg p-4 text-sm bg-green-50 text-green-800 border border-green-200 block';
                           form.reset();
                           statusDiv.classList.remove('hidden');
                       }, function(error) {
                           // Error
                           console.error('FAILED...', error);
                           statusDiv.textContent = 'Parece que el internet del campo está fallando. Por favor intenta de nuevo o contáctanos por WhatsApp.';
                           statusDiv.className = 'rounded-lg p-4 text-sm bg-red-50 text-red-800 border border-red-200 block';
                           statusDiv.classList.remove('hidden');
                       })
                      .finally(function() {
                          // Reset button state
                          submitBtn.disabled = false;
                          submitBtn.classList.remove('opacity-75', 'cursor-not-allowed');
                          btnText.textContent = 'Enviar Mensaje';
                          spinner.classList.add('hidden');
                      });
              });
            </script>
          </div>
        </div>

      </div>
    </div>
  </section>

  <Footer />
</Layout>
